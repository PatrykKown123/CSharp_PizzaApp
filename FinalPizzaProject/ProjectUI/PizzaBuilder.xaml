<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalPizzaProject.ProjectUI.PizzaBuilder"
             Title="PizzaBuilder">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="LightGray">
            <HorizontalStackLayout HeightRequest="3" BackgroundColor="#ff9e36"></HorizontalStackLayout>
            <VerticalStackLayout BackgroundColor="#090f2f">
                <Label 
                    Text="Just Pizza!" FontSize="Large" HorizontalOptions="Center"  FontAttributes="Bold" TextColor="White" />
                <Label 
                    Text="Delivering to: Client's Address" FontSize="12.5" HorizontalOptions="Center"  FontAttributes="Bold" TextColor="White" x:Name="address"/>
            </VerticalStackLayout>
            <HorizontalStackLayout HeightRequest="3" BackgroundColor="#ff9e36"></HorizontalStackLayout>
            <VerticalStackLayout BackgroundColor="DarkGray" HeightRequest="300">
                
            </VerticalStackLayout>
            <HorizontalStackLayout HeightRequest="3" BackgroundColor="#ff9e36"></HorizontalStackLayout>
            

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>